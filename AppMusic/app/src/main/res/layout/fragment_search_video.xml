<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/im_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/custom_ripple_image"
            android:padding="5dp"
            android:src="@drawable/ic_baseline_arrow_back_ios_24"
            app:layout_constraintBottom_toBottomOf="@id/view_search"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/view_search"
            android:layout_width="0dp"
            android:layout_height="@dimen/dimen_30dp"
            android:layout_marginTop="@dimen/dimen_15dp"
            android:layout_marginRight="@dimen/dimen_20dp"
            android:background="@drawable/custom_bg_search"
            app:layout_constraintLeft_toRightOf="@+id/im_back"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <EditText
            android:id="@+id/edt_search"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_15dp"
            android:background="@null"

            android:ellipsize="end"
            android:hint="@string/search"
            android:maxLines="1"
            android:singleLine="true"
            android:textSize="13sp"
            app:layout_constraintBottom_toBottomOf="@id/view_search"
            app:layout_constraintLeft_toLeftOf="@id/view_search"


            app:layout_constraintRight_toRightOf="@+id/view_search"
            app:layout_constraintTop_toTopOf="@id/view_search" />

        <TextView
            android:id="@+id/tv_history_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_25dp"
            android:text="@string/history"
            android:textColor="@color/black"
            app:layout_constraintLeft_toLeftOf="@id/im_back"
            app:layout_constraintTop_toBottomOf="@+id/edt_search" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_delete_24"
            app:layout_constraintRight_toRightOf="@id/edt_search"
            app:layout_constraintTop_toTopOf="@id/tv_history_search" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rc_listHistorySearch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/dimen_10dp"
            android:layout_marginVertical="@dimen/dimen_10dp"
            android:orientation="horizontal"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintBottom_toTopOf="@+id/rc_listResearch"
            tools:itemCount="12"
            tools:listitem="@layout/item_history_search"

            app:layout_constraintTop_toBottomOf="@+id/tv_history_search" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rc_listResearch"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="20dp"
            android:orientation="vertical"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="@id/im_back"
            app:layout_constraintRight_toRightOf="@id/edt_search"
            app:layout_constraintTop_toBottomOf="@+id/rc_listHistorySearch" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>