<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/dimen_5dp"
        android:padding="@dimen/dimen_5dp"
        android:background="@drawable/custom_ripple_item_music"


        android:layout_height="wrap_content">


        <androidx.cardview.widget.CardView
            android:id="@+id/card_musicSong"

            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:cardCornerRadius="6dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent">
            <ImageView
                android:id="@+id/imMusicSong"
                android:scaleType="centerCrop"
                android:src="@drawable/bg_music"
                android:layout_width="40dp"
                android:layout_height="40dp"

                />

        </androidx.cardview.widget.CardView>


        <TextView
            android:id="@+id/tv_nameSong"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:textSize="15sp"

            android:textColor="#353535"
            android:paddingRight="@dimen/dimen_10dp"
            app:layout_constraintLeft_toRightOf="@+id/card_musicSong"
            app:layout_constraintRight_toLeftOf="@id/im_more"

            app:layout_constraintTop_toTopOf="parent"
            tools:text="VÃ¢n rung" />

        <ImageView
            android:id="@+id/icon_singer"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@drawable/icon_device"
            app:layout_constraintBottom_toBottomOf="@id/tv_name_album"
            app:layout_constraintLeft_toLeftOf="@+id/tv_nameSong"
            app:layout_constraintTop_toTopOf="@+id/tv_name_album" />

        <TextView
            android:id="@+id/tv_nameSinger"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginStart="3dp"
            android:drawablePadding="3dp"
            android:gravity="center"
            android:textSize="11sp"
            android:maxLength="30"
            android:ellipsize="end"
            android:textColor="@color/black"
            app:layout_constraintBottom_toBottomOf="@id/tv_name_album"
            app:layout_constraintLeft_toRightOf="@+id/icon_singer"
            app:layout_constraintTop_toTopOf="@+id/tv_name_album"
            tools:text="Madihu" />

        <TextView
            android:id="@+id/tv_name_album"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:gravity="center_vertical"
            android:textSize="11sp"
            android:textColor="@color/black"
            android:ellipsize="end"
            android:maxLines="1"
            app:drawableLeftCompat="@drawable/ic_baseline_more_vert_18"
            app:layout_constraintLeft_toRightOf="@+id/tv_nameSinger"
            app:layout_constraintRight_toLeftOf="@+id/im_more"
            app:layout_constraintTop_toBottomOf="@+id/tv_nameSong"
            tools:text="22 " />

        <ImageView
            android:id="@+id/im_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_more_vert_24"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:foreground="@drawable/custom_ripple_image"
            android:clickable="true"
            android:paddingHorizontal="@dimen/dimen_5dp"
            android:paddingVertical="@dimen/dimen_10dp"
            app:layout_constraintTop_toTopOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>