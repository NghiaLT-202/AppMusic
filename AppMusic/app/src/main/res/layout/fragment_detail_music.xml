        <androidx.core.widget.NestedScrollView
            android:id="@+id/nestedScrollView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_nameChanel">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cv_imageChanel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_20dp"

                    app:cardCornerRadius="@dimen/dimen_180dp"
                    app:layout_constraintLeft_toLeftOf="@id/rc_listVideo"
                    app:layout_constraintTop_toTopOf="parent">

                    <ImageView
                        android:id="@+id/im_imageChanel"
                        android:layout_width="@dimen/dimen_40dp"
                        android:layout_height="@dimen/dimen_40dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/ngoi_sao_co_don" />

                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/tv_nameChanelBig"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:text="@string/v_n_rung"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    app:layout_constraintLeft_toRightOf="@+id/cv_imageChanel"

                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="@id/cv_imageChanel" />

                <TextView
                    android:id="@+id/tv_subscriber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/black"

                    android:text=""
                    android:textSize="10sp"
                    app:layout_constraintBottom_toBottomOf="@+id/cv_imageChanel"
                    app:layout_constraintLeft_toRightOf="@+id/cv_imageChanel"

                    />

                <TextView
                    android:id="@+id/line_gray"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="@dimen/dimen_15dp"
                    android:background="#D6D1D1"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/cv_imageChanel" />

                <TextView
                    android:id="@+id/tv_comment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_10dp"
                    android:text="@string/comment"
                    android:textColor="@color/black"
                    android:textSize="@dimen/textsize_14sp"
                    android:textStyle="bold"
                    app:layout_constraintLeft_toLeftOf="@+id/tv_similarVideos"
                    app:layout_constraintTop_toBottomOf="@+id/line_gray" />

                <TextView
                    android:id="@+id/tv_comment_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_10dp"
                    android:text="55"
                    android:textSize="@dimen/textsize_12sp"
                    app:layout_constraintBottom_toBottomOf="@+id/tv_comment"
                    app:layout_constraintLeft_toRightOf="@+id/tv_comment"
                    app:layout_constraintTop_toTopOf="@+id/tv_comment"

                    />

                <ImageView
                    android:id="@+id/im_icon_show_comment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/arrow_30"
                    app:layout_constraintBottom_toBottomOf="@id/tv_comment"
                    app:layout_constraintRight_toRightOf="@+id/rc_listVideo"
                    app:layout_constraintTop_toTopOf="@+id/tv_comment" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/cv_user_comment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_10dp"

                    app:cardCornerRadius="@dimen/dimen_180dp"
                    app:layout_constraintLeft_toLeftOf="@id/tv_comment"
                    app:layout_constraintTop_toBottomOf="@+id/tv_comment">

                    <ImageView
                        android:id="@+id/im_image_user_comment"
                        android:layout_width="@dimen/dimen_30dp"
                        android:layout_height="@dimen/dimen_30dp"
                        android:scaleType="centerInside"
                        android:src="@drawable/ngoi_sao_co_don"

                        />
                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/tv_content_comment"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_10dp"
                    android:ellipsize="end"
                    android:maxLines="3"
                    android:text="Bản nhạc ám ảnh qua giờ nhưng hay thật Tính ra bài này ra 1 năm r mà h mới nổi à"
                    app:layout_constraintBottom_toBottomOf="@id/cv_user_comment"
                    app:layout_constraintLeft_toRightOf="@+id/cv_user_comment"
                    app:layout_constraintRight_toRightOf="@id/rc_listVideo"
                    app:layout_constraintTop_toTopOf="@+id/cv_user_comment" />

                <TextView
                    android:id="@+id/line_gray_under"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="@dimen/dimen_15dp"
                    android:background="#D6D1D1"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/cv_user_comment" />


                <TextView
                    android:id="@+id/tv_similarVideos"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="@dimen/dimen_30dp"
                    android:text="@string/similar_videos"
                    android:textColor="@color/black"
                    android:textSize="@dimen/textsize_15sp"
                    android:textStyle="bold"
                    app:layout_constraintLeft_toLeftOf="@+id/cv_imageChanel"
                    app:layout_constraintTop_toBottomOf="@+id/cv_user_comment"

                    />

                <FrameLayout
                    android:id="@+id/loading"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="false"
                    app:layout_constraintTop_toBottomOf="@+id/tv_similarVideos"
                    app:layout_constraintBottom_toBottomOf="parent"
                   >

                    <com.aseem.versatileprogressbar.ProgBar
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:indeterminate="true"
                        app:barType="@drawable/infinity_bar" />
                </FrameLayout>


                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rc_listVideo"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginHorizontal="@dimen/dimen_10dp"
                    android:layout_marginTop="@dimen/dimen_10dp"

                    android:orientation="vertical"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    app:layout_constraintTop_toBottomOf="@+id/tv_similarVideos"

                    tools:itemCount="5"
                    tools:listitem="@layout/item_video" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.core.widget.NestedScrollView>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>