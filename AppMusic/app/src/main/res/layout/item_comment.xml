<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
     <androidx.cardview.widget.CardView
         android:id="@+id/cv_imAccount"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         app:cardCornerRadius="@dimen/dimen_180dp"
         app:layout_constraintTop_toTopOf="parent"
         app:layout_constraintLeft_toLeftOf="parent"
         >
         <ImageView
             android:id="@+id/im_imageAccount"
             android:layout_width="@dimen/dimen_30dp"
             android:layout_height="@dimen/dimen_30dp"
             android:src="@drawable/ngoi_sao_co_don"
             android:scaleType="centerCrop"
             />
     </androidx.cardview.widget.CardView>
        <TextView
            android:id="@+id/tv_name_account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@+id/cv_imAccount"
            app:layout_constraintTop_toTopOf="@+id/cv_imAccount"
            android:text="Thùy Linh lê  "
            android:textSize="@dimen/textsize_12sp"

            android:layout_marginLeft="@dimen/dimen_10dp"
            />
        <ImageView
            android:id="@+id/im_dot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@+id/tv_name_account"
            android:gravity="center"
            app:layout_constraintTop_toTopOf="@id/tv_name_account"
            app:layout_constraintBottom_toBottomOf="@id/tv_name_account"
            android:src="@drawable/dot_18"
            />
        <TextView
            android:id="@+id/tv_timeComment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@+id/im_dot"
            app:layout_constraintTop_toTopOf="@+id/cv_imAccount"
            android:textSize="@dimen/textsize_12sp"
            android:text="10 tháng trước "
            android:layout_marginLeft="@dimen/dimen_5dp"
            />
        <ImageView
            android:id="@+id/im_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/cv_imAccount"
            android:src="@drawable/ic_baseline_more_vert_18_white"
            />
        <TextView
            android:id="@+id/tv_content_comment"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="@id/tv_name_account"
            app:layout_constraintRight_toLeftOf="@id/im_menu"
            app:layout_constraintTop_toBottomOf="@id/tv_name_account"
            android:textSize="13sp"
            android:layout_marginTop="@dimen/dimen_5dp"
            android:textColor="#2B2A2A"
            android:text="I love listening to this music it brings me so much peace.  I hope so much in my heart that will bring peace to others specially to those who suffer from depression and anxiety and can’t sleep well."
            />
        <ImageView
            android:id="@+id/im_like"
            android:layout_width="@dimen/dimen_20dp"
            android:layout_height="@dimen/dimen_20dp"
            android:src="@drawable/like_white_72"
            android:layout_marginTop="@dimen/dimen_15dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_content_comment"
            app:layout_constraintLeft_toLeftOf="@id/tv_content_comment"
            />
        <TextView
            android:id="@+id/tv_like_comment_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/im_like"
            app:layout_constraintBottom_toBottomOf="@id/im_like"
            app:layout_constraintLeft_toRightOf="@id/im_like"
            android:textColor="@color/black"
            android:text="50"
            android:textSize="@dimen/textsize_12sp"
            android:layout_marginLeft="@dimen/dimen_5dp"
            />


        <ImageView
            android:id="@+id/im_disLike"
            android:layout_width="@dimen/dimen_20dp"
            android:layout_height="@dimen/dimen_20dp"
            android:src="@drawable/dislike_white_72"
            app:layout_constraintLeft_toRightOf="@+id/tv_like_comment_count"
            android:layout_marginLeft="@dimen/dimen_20dp"
            app:layout_constraintTop_toTopOf="@id/im_like"/>

        <ImageView
            android:id="@+id/im_comment"
            android:layout_width="@dimen/dimen_20dp"
            android:layout_height="@dimen/dimen_20dp"
            android:layout_marginLeft="@dimen/dimen_25dp"
            android:src="@drawable/comment_72"
            app:layout_constraintLeft_toRightOf="@+id/im_disLike"
            app:layout_constraintTop_toTopOf="@id/im_like" />
        <TextView
            android:id="@+id/tv_feedback"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/im_like"
            app:layout_constraintLeft_toLeftOf="@+id/im_like"
            android:layout_marginTop="@dimen/dimen_20dp"
            />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>