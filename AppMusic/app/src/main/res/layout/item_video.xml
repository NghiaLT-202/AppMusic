<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/dimen_5dp"
        android:padding="@dimen/dimen_5dp"
        android:background="@drawable/custom_ripple_item_music"
        android:layout_height="wrap_content">
        <androidx.cardview.widget.CardView
            android:id="@+id/cv_imyouTubePlayerView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="@dimen/dimen_8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            >
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/imgThumbnails"
                android:layout_width="130dp"
                android:layout_height="70dp"
                app:layout_constraintTop_toTopOf="parent"
                android:src="@drawable/van_rung"
                android:scaleType="centerCrop"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

        </androidx.cardview.widget.CardView>


        <TextView
            android:id="@+id/tv_titleVideo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            android:text="@string/v_n_rung"
            android:ellipsize="end"
            android:maxLines="2"
            android:textColor="@color/black"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/cv_imyouTubePlayerView"
            android:layout_marginLeft="10dp"
            android:textSize="16sp"
            />
        <TextView
            android:id="@+id/tv_nameChanel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/madihu"
            android:textSize="10sp"
            android:textColor="@color/black"

            app:layout_constraintLeft_toRightOf="@+id/cv_imyouTubePlayerView"
            android:layout_marginLeft="10dp"
            app:layout_constraintBottom_toBottomOf="parent"

            />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>