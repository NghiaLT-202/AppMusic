<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/im_song"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:cropToPadding="true"
            android:scaleType="centerCrop" />

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#40000000"
            />

        <ImageView
            android:id="@+id/im_down"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:padding="@dimen/dimen_5dp"
            android:background="@drawable/custom_ripple_image"
            android:src="@drawable/ic_baseline_keyboard_arrow_down_24"
            app:layout_constraintBottom_toBottomOf="@id/tv_song"
            app:layout_constraintTop_toTopOf="@id/tv_song"

            app:layout_constraintLeft_toLeftOf="parent"
            />

        <TextView
            android:id="@+id/tv_song"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="1"
            android:text="@string/song"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/cd_song"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            />
        <androidx.cardview.widget.CardView
            android:id="@+id/cd_song"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:cardCornerRadius="15dp"
            app:layout_constraintBottom_toTopOf="@+id/im_favorite"
            app:layout_constraintDimensionRatio="5:4.6"
            app:layout_constraintLeft_toLeftOf="@id/sb_time_song"
            app:layout_constraintRight_toRightOf="@id/sb_time_song"
            app:layout_constraintTop_toBottomOf="@+id/tv_song">

            <ImageView
                android:id="@+id/im_song_top"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:cropToPadding="true"

                android:scaleType="centerCrop" />



        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/tv_nameSong"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:text="@string/now_playing"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            android:scrollHorizontally="true"
            android:scrollbars="horizontal"
            android:singleLine="true"
            android:cursorVisible="false"
            android:ellipsize="marquee"
            android:focusableInTouchMode="true"
            android:marqueeRepeatLimit ="marquee_forever"
            app:layout_constraintBottom_toBottomOf="@id/im_favorite"
            app:layout_constraintLeft_toLeftOf="@id/sb_time_song"
            app:layout_constraintRight_toLeftOf="@id/im_listPlay"
            app:layout_constraintTop_toTopOf="@id/im_favorite" />

        <TextView
            android:id="@+id/tv_nameSinger"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="@string/now_playing"
            android:textColor="@color/white"
            android:alpha="0.6"
            android:textSize="@dimen/textsize_15sp"
            android:textStyle="bold"
            app:layout_constraintRight_toLeftOf="@id/im_listPlay"

            app:layout_constraintLeft_toLeftOf="@id/sb_time_song"
            app:layout_constraintTop_toBottomOf="@id/tv_nameSong" />



        <ImageView
            android:id="@+id/im_favorite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_favorite_border_24"
            app:layout_constraintBottom_toTopOf="@+id/sb_time_song"
            app:layout_constraintTop_toBottomOf="@id/cd_song"
            app:layout_constraintRight_toRightOf="@id/sb_time_song"/>




        <TextView
            android:id="@+id/tv_startTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="5dp"
            android:text="00:00"
            android:textColor="@color/white"
            android:textSize="12sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/sb_time_song" />

        <TextView
            android:id="@+id/tv_endTime"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginRight="25dp"
            android:text="00:00"
            android:textColor="@color/white"
            android:textSize="12sp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/sb_time_song" />

        <SeekBar
            android:id="@+id/sb_time_song"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:thumbTint="@color/white"
            android:thumb="@drawable/custom_thumb"
            app:layout_constraintTop_toBottomOf="@id/im_favorite"
            app:layout_constraintBottom_toTopOf="@+id/im_playSong"
            app:layout_constraintLeft_toLeftOf="parent"

            app:layout_constraintRight_toRightOf="parent" />


        <ImageView
            android:id="@+id/im_play_again"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_repeat_one_24"

            app:layout_constraintBottom_toBottomOf="@id/im_playSong"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/im_rewind"
            app:layout_constraintTop_toTopOf="@id/im_playSong" />

        <ImageView
            android:id="@+id/im_rewind"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_ripple"
            android:clickable="true"

            android:src="@drawable/ic_baseline_skip_previous_24"
            app:layout_constraintBottom_toBottomOf="@id/im_playSong"
            app:layout_constraintLeft_toRightOf="@+id/im_play_again"

            app:layout_constraintRight_toLeftOf="@id/im_playSong"
            app:layout_constraintTop_toTopOf="@id/im_playSong" />

        <ImageView
            android:id="@+id/im_playSong"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_play_circle_filled_60"
            app:layout_constraintTop_toBottomOf="@id/sb_time_song"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="1:2.2"
            android:layout_marginBottom="@dimen/dimen_20dp"
            app:layout_constraintLeft_toRightOf="@+id/im_rewind"
            app:layout_constraintRight_toLeftOf="@id/im_fast_forward" />

        <ImageView
            android:id="@+id/im_fast_forward"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_skip_next_24"
            app:layout_constraintBottom_toBottomOf="@id/im_playSong"
            app:layout_constraintLeft_toRightOf="@+id/im_playSong"
            app:layout_constraintRight_toLeftOf="@id/im_listPlay"
            app:layout_constraintTop_toTopOf="@id/im_playSong" />

        <ImageView
            android:id="@+id/im_listPlay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_playlist_play_30"
            app:layout_constraintBottom_toBottomOf="@id/im_playSong"
            app:layout_constraintLeft_toRightOf="@id/im_fast_forward"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/im_playSong"

            />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>